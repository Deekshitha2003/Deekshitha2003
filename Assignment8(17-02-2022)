n=int(input("enter n:"))

odd=[]

even=[]

esum=0

eodd=0

total=0

for i in range(n):

    total +=i

    if(i%2 == 0):

        even.append(i)

        esum+=i

    else:

        odd.append(i)

        eodd+=i

print("even numbers",*even)

print("odd numbers",*odd)

print("even sum",esum)

print("odd sum",eodd)

print("total sum",total)
